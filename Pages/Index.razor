<ol>
    @foreach (var card in ginRummyGameService.handPlayerOne)
    {
        <li>@card.FullNameString()</li>
        <img width="60" height="60" src="@($"SVG-cards/{card.FullNameString()}.svg")" @onclick="@(() => PlayerOneClickedCardImage(card))">
    }
</ol>

<p>@ginRummyGameService.HandToString(ginRummyGameService.handPlayerTwo)</p>
<br />
<p>Discard Pile: @ginRummyGameService.discardPile.Last().ToString()</p>
<img width="60" height="60" src="@($"SVG-cards/{ginRummyGameService.discardPile.Last().FullNameString()}.svg")" @onclick="@(() => PlayerOneClickedDiscardPile())">
<br />
<p>@ginRummyGameService.HandToString(ginRummyGameService.handPlayerOne)</p>
<br />

<br />

<button class="btn btn-danger" @onclick="@(() => PlayerOneClickedPassButton())" disabled="@(!ginRummyGameService.isPlayerOneTurn)">Pass Turn</button>

<p>@ginRummyGameService.isPlayerOneTurn</p>

<p>@playerOneNumber</p>

@code {
    private int playerOneNumber;

        private void PlayerOneClickedDeck()
    {
        if (!ginRummyGameService.isPlayerOneTurn) return;

        ginRummyGameService.PlayerPickedUpCardFromDeck();
    }

    private void PlayerOneClickedDiscardPile()
    {
        if (!ginRummyGameService.isPlayerOneTurn) return;

        ginRummyGameService.PlayerPickedUpCardFromDiscardPile();
    }

    private void PlayerOneClickedCardImage(Card card)
    {
        if (!ginRummyGameService.isPlayerOneTurn) return;
        if (!ginRummyGameService.isPickedUpCardSet) return;

        playerOneNumber = ginRummyGameService.handPlayerOne.IndexOf(card);

        ginRummyGameService.PlayerChoseDiscard(playerOneNumber); // TODO: refactor with above line
    }

    private void PlayerOneClickedPassButton()
    {
        if (!ginRummyGameService.isPlayerOneTurn) return;

        ginRummyGameService.PlayerChoseToPass();
    }

